{
  "manifest_version": 2,

  "name": "Clean Url",
  "description": "Remove Ads info from url",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"], 
    "persistent": false 
  }, 

  "icons": {
    "16": "icons/icon16.png", 
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }, 

  "browser_action": {
    "default_icon": "icons/icon16.png", 
    "default_title": "Remove extra info" 
  },
  "permissions": [
    "activeTab", 
    "tabs", 
    "webNavigation" 
  ]
}
